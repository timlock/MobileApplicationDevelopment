<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/positionLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/positionLabel"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="lat=?, lon=?"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/trackingSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="Track?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/stationEditLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/stationEdit"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/edit_text_style"
            android:hint="Avia Station Melle"
            android:paddingStart="6sp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/stationZipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/zipEdit"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_text_style"
            android:hint="49324"
            android:inputType="number"
            android:maxLength="5"
            android:paddingStart="6sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stationCostLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16sp"
            android:text="Preis: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/costEdit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_text_style"
            android:hint="1,829"
            android:paddingStart="6sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/perLiterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:text="â‚¬/l"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/postStationData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Speichern"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:color="#4799E8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f4f7"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/stationZipLabelLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/zipEditLoad"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_text_style"
                android:hint="49324"
                android:inputType="number"
                android:maxLength="5"
                android:paddingStart="6sp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/loadStationData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text="Laden"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/stationLabelLoad"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8sp"
                android:text="Station: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stationLabelLoadVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16sp"
                android:text="undefiniert"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/positionLabelLoad"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8sp"
                android:text="Position: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/positionLabelLoadVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16sp"
                android:text="undefiniert"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/costLabelLoad"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8sp"
                android:text="Preis: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/costLabelLoadVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16sp"
                android:text="undefiniert"
                android:textSize="16sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/stationListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
